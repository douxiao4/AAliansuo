.searchLetter {
  position: fixed;
  top: 100rpx;
  /* top: -10rpx; */
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}

.searchLetter view {
  margin-top: 12rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 10rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}

.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
}

.thisCity {
  padding-top: 20rpx;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #E7491F;
  border-radius: 8rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #E7491F;
  text-align: center;
  min-width: 149.5rpx;
  margin: 20rpx 0 20rpx 30rpx;
}

.thishotText {
  color: #E7491F;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #E7491F !important;
}

.slectCity view {
  color: #E7491F !important;
}
.weui-grids {
  margin-left: 20rpx;
}
.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 搜索框开始 */
.searchText {
  width: 100%;
  /* height: 55rpx; */
  box-sizing: border-box;
}
.searchText {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}
.searchText input {
  flex: 3;
  width: 75.5%;
  display: inline-block;
  border: 1px solid #ececec;
  /* margin-left: 20rpx; */
  padding-left: 18rpx;
  text-align: left;
  border-radius: 5rpx;
  padding: 8rpx;
}
.searchText button {
  flex: 1;
  width: 17%;
  display: inline-block;
  font-size: 24rpx;
  padding: 5rpx 1rpx;
  line-height: 55rpx;
  margin-left: 8rpx;
}
/* 搜索框结束 */
