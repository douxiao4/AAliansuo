@import '../../template/stars-template.wxss';

.lc-commentstar {
    position: fixed;
    top: 0;
    z-index: 99;
    margin-left: 50%;
    transform: translateX(-50%) translateZ(0);
    /* -webkit-transform: ; */
}
.comment-star {
    position: fixed;
    top: 0;
    z-index: 98;
    background-color: rgba(255,255,255,0.8);
    border-top: 1px solid #F0F2F6;
    height: 140rpx;
    width: 100%;
    -webkit-transform: translateZ(0);
}
.lc-commentstar {
    border-bottom: 0;
}
.container {
    width: 100%;
    /* height: 100%; */
    overflow: hidden;
}

.comment-classify {
    position: fixed;
    top: 140rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    border-bottom: 1px solid #F0F2F6;
    z-index: 99;
    background-color: rgba(255,255,255,0.8);
    -webkit-transform: translateZ(0);
}
.comment-classify view {
    width: 25%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}
.comment-classify view text {
    display: inline-block;
    height: 100%;
    padding:0 15rpx;
    color: #A2A7AA;
    box-sizing: border-box;
}
.bottom-redline {
    color: black !important;
    font-weight: bold;
    border-bottom: 2px solid black;
}

.comment-coms {
    margin-top: 220rpx;

}
.lc-comments {
    /* height: 180rpx; */
    padding: 0 30rpx 30rpx;
    border-bottom: 1px solid #F0F2F6;
  }
  .lc-commentshead {
    height: 70rpx;
    line-height: 70rpx;
  }
  .lc-commentshead>image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 16rpx;
  }
  .lc-commentshead>text:nth-of-type(1) {
    color: #A2A7AA;
    font-size: 24rpx;
    margin-right: 15rpx;
  }
  .lc-commentshead>text:nth-of-type(2) {
    color: #F5A623;
    font-size: 20rpx;
  }
  .lc-commentshead>text:nth-of-type(3) {
    color: #A2A7AA;
    font-size: 24rpx;
    float: right;
  }
  .lc-commentcontent {
    padding: 0rpx 30rpx;
    /* box-sizing: content-box; */
  }
  .lc-commentcontent>text {
    color: #455055;
    font-size: 24rpx;
    width: 650rpx;
