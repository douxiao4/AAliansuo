.t {

}
.form-box {
  background: #fff;
  padding: 20rpx;
  display: flex;
  border-bottom: 1px solid #DCDCDC;
}
.form-box:nth-of-type(1) {
  border-top: 1px solid #DCDCDC;
}
.box-left {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.4rem;
}
.box-right {
  flex: 4;
}
.box-right input {
  font-size: 28rpx;
  line-height: 1.4rem;
}
.save-btn {
  width: 80%;
  background: #F05442;
  color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.back-btn {
  width: 80%;
  background: #fff;
  color: #8d8d8d;
  margin-top: 20rpx;
  font-size: 30rpx;
}

.box-right picker {
  font-size: 28rpx;
  line-height: 1.4rem;
}
#city-selected {

}
.city-selected-wrap {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.6);
}
.city-selected-inner {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  z-index: 9999;
}
.city-selected-content {
  line-height: 100rpx;
  padding-left: 20rpx;
  display: flex;
}
.city-selected-content .jg {
  flex: 3;
}
.city-selected-content .btn {
  background: #F05442;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 4rpx;
  flex: 1;
}
.city-selected-inner picker-view {
  width: 100%;
  height: 300px;
}
picker-view-column view {
  text-align: center;
  line-height: 50px;
}

label,input {
  display: inline-block;
}

.lcfp-head {
  height: 86rpx;
  font-size: 32rpx;
  line-height: 86rpx;
  padding-left: 36rpx;
  color: #455055;
  font-weight: bold;
  border-bottom: 1px solid #F0F2F6;
  background-color: #fff;
}

.lcfp-check {
  height: 86rpx;
  line-height: 86rpx;
  background-color: #fff;
  font-size: 32rpx;
  color: #000;
  padding: 0 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  /* display: flex;
  justify-content: space-between; */
}
.radio-group {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.lcfp-main {
  padding-left: 36rpx;
  background-color: #fff;
}
.lcfp-main view {
  height: 86rpx;
  border-bottom: 1px solid #F0F2F6;
  line-height: 86rpx;
  position: relative;
}
.lcfp-main label {
  color: #F05442;
  font-size: 28rpx;
  font-weight: bold;
}
.lcfp-main input {
  position: absolute;
  left: 192rpx;
  top: 50%;
  transform: translateY(-50%);
}

.btn-area {
  margin-top: 56rpx;
  font-size: 28rpx;
  height: 36rpx;
  border-radius: 10rpx;
  width: 100%;
  text-align: center;
}
.btn-area button {
  width: 80%;
  background: #F05442;
  color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.btn-area .del,
.btn-area .back {
  background-color: #fff;
  color: #8d8d8d;
}
