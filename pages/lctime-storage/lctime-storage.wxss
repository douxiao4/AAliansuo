/* 头部开始 */
.lcst-head {
    height: 106rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #fff;
    padding: 0 36rpx;
    line-height: 86rpx;
    /* margin-top: 20rpx; */
    border-top: 20rpx solid #F0F2F6;
    border-bottom: 1px solid #F0F2F6;
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 9;
}

.lcsth-left>text {
    font-size: 32rpx;
    color: #455055;
    font-weight: bold;
}
.lcsth-left image {
    width: 30rpx;
    height: 30rpx;
    margin-left: 16rpx;
    vertical-align: text-top;
}
.lcsth-right {
    color: #A2A7AA;
    font-size: 24rpx;
}
/* 头部结束 */

/* 时长开始 */
.lcst-time {
    height: 136rpx;
    text-align: center;
    background-color: #fff;
    line-height: 136rpx;
    position: fixed;
    top: 106rpx;
    left: 0;
    box-sizing: border-box;
    z-index: 9;
    width: 100%;
    font-family: Helvetica;
}
.lcst-time text:nth-of-type(1) {
    font-size: 54rpx;
    font-weight: bold;
    color: #040000;
    margin-left: 34rpx;
}
.lcst-time text:nth-of-type(2) {
    color: #A2A7AA;
    font-size: 24rpx;
    margin-left: 8rpx;
}
/* 时长结束 */
/* 收支明细头部开始 */
.lcst-infohead {
    height: 106rpx;
    line-height: 86rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 36rpx;
    display: flex;
    position: fixed;
    top: 242rpx;
    right: 0;
    box-sizing: border-box;
    background-color: #fff;
    font-size: 32rpx;
    font-weight: bold;
    width: 100%;
    border-bottom: 1px solid #F0F2F6;
    border-top: 20rpx solid #F0F2F6;
    color: #455055;
}
.lcst-infohead view>text {
    margin-left: 32rpx;
    font-size: 24rpx;
    color: #A2A7AA;
    font-weight: normal;
}
.bgColor {
    color: #000000 !important;
    font-weight: bold !important;
}
/* 收支明细头部结束 */

/* 收支明细开始 */
.lcst-info {
    margin-top: 347rpx;
    display: flex;
    flex-direction: column;
    padding: 0 36rpx;
    background-color: #fff;
}
.lcst-infotext {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 128rpx;
    line-height: 128rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #F0F2F6;
}
.lcstif-left {
    display: flex;
    flex-direction: column;
    line-height: 45rpx;
    margin-top: 24rpx;
}
.lcstif-left>text:nth-of-type(1) {
    font-size: 28rpx;
    color: #000000;
    /* font-weight: bold; */
}
.lcstif-left>text:nth-of-type(2) {
    font-size: 24rpx;
    color: #A2A7AA;
}
.lcst-infotext>text {
    font-size: 36rpx;
    font-weight: bold;
    font-family: Helvetica;
}
.redColor {
    color: #F05442 !important;
}
.greenColor {
    color: #009999 !important;
}
/* 收支明细结束 */
