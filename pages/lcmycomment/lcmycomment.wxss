.lc-comments {
    /* height: 180rpx; */
    padding: 0 30rpx 30rpx;
    border-bottom: 1px solid #F0F2F6;
  }
  .lc-commentshead {
    height: 70rpx;
    line-height: 70rpx;
  }
  .lc-commentshead>image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
    vertical-align: text-bottom;
  }
  .lc-commentshead>text:nth-of-type(1) {
    color: #A2A7AA;
    font-size: 24rpx;
    margin-right: 15rpx;
  }
  .lc-commentshead>text:nth-of-type(2) {
    color: #F5A623;
    font-size: 20rpx;
  }
  .lc-commentshead>text:nth-of-type(3) {
    color: #A2A7AA;
    font-size: 24rpx;
    float: right;
  }
  .lc-commentcontent {
    padding: 0rpx 30rpx;
    /* box-sizing: content-box; */
  }
  .lc-commentcontent>text {
    color: #455055;
    font-size: 24rpx;
    width: 650rpx;
    /* padding-left: 16rpx; */
  }
  .lc-short {
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }
  .lc-noComments {
    text-align: center;
    display: block;
    height: 198rpx;
    line-height: 190rpx;
    font-size: 28rpx;
    color: #ccc;
    border-top: 1px solid #eee;
  }
  .lcComment-gray {
    display: none;
  }

  .comments-bottom {
    width: 100%;
    text-align: center;
    background-color: #F0F2F6;
    font-size: 20rpx;
    color: #A2A7AA;
    padding: 10rpx 0;
    /* position: absolute;
    bottom: 0; */
    /* height: 25px;
    line-height: 25px; */
 }
.lc-letshort {
    padding-left: 30rpx;
    font-size: 22rpx;
    color: #99ADC5;
 }
 .lc-hotel {
     width: 614rpx;
     height: 120rpx;
     line-height: 120rpx;
     background-color: #F0F2F6;
     margin: 15rpx 0 0 30rpx;
     display: flex;
     flex-direction: row;
     padding-top: 20rpx;
     box-sizing: border-box;
 }
 .lc-hotel image {
     width: 80rpx;
     height: 80rpx;
     border-radius: 15rpx;
     margin-left: 20rpx;
 }
 .lc-name {
    display: flex;
    flex-direction: column;
 }
 .lc-headname,.lc-area {
   height: 40rpx;
   width: 460rpx;
   line-height: 40rpx;
   padding-left: 30rpx;
   overflow : hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 1;
   -webkit-box-orient: vertical;
 }
 